@page "/Account/AccessDenied"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<PageTitle>Access Denied</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Class="pa-6 text-center" Elevation="1">
        <MudIcon Icon="@Icons.Material.Filled.Lock" Color="Color.Error" Size="Size.Large" Class="mb-3" />
        <MudText Typo="Typo.h5" Color="Color.Error" GutterBottom="true">Access Denied</MudText>
        <MudText Typo="Typo.body1" Class="mb-2">You do not have permission to access this page.</MudText>
        <MudText Typo="Typo.body2" Class="mb-4 mud-text-secondary">If you believe this is an error, please contact your administrator.</MudText>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="GoHome">Go to Home</MudButton>
    </MudPaper>
</MudContainer>


