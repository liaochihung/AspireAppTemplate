@using System.Net.Http.Json
@inject HttpClient Http
@inject ISnackbar Snackbar

<MudDialog @bind-Visible="_visible" Options="_dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">新增自訂任務</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" Model="@_model">
            <MudTextField @bind-Value="_model.Name" Label="任務名稱" Required="true" />
            <MudTextField @bind-Value="_model.Description" Label="描述" Lines="2" Class="mt-3" />
            
            <MudSelect @bind-Value="_model.Type" Label="任務類型" Required="true" Class="mt-3">
                <MudSelectItem Value="1">一次性</MudSelectItem>
                <MudSelectItem Value="2">週期性</MudSelectItem>
            </MudSelect>

            @if (_model.Type == 1)
            {
                <MudDatePicker @bind-Date="_scheduledDate" Label="執行日期" Required="true" Class="mt-3" />
                <MudTimePicker @bind-Time="_scheduledTime" Label="執行時間" Required="true" Class="mt-3" />
            }
            else if (_model.Type == 2)
            {
                <MudTextField @bind-Value="_model.CronExpression" Label="Cron 表達式" Required="true" Class="mt-3" 
                              HelperText="例如: * * * * * (每分鐘) 或 0 0 * * * (每天午夜)" />
            }

            <MudDivider Class="my-4" />

            <MudSelect @bind-Value="_model.HttpMethod" Label="HTTP 方法" Required="true">
                <MudSelectItem Value="1">GET</MudSelectItem>
                <MudSelectItem Value="2">POST</MudSelectItem>
                <MudSelectItem Value="3">PUT</MudSelectItem>
                <MudSelectItem Value="4">DELETE</MudSelectItem>
            </MudSelect>

            <MudTextField @bind-Value="_model.Url" Label="URL" Required="true" Class="mt-3"
                          HelperText="例如: https://jsonplaceholder.typicode.com/posts/1" />

            <MudTextField @bind-Value="_model.Headers" Label="Headers (JSON)" Lines="3" Class="mt-3"
                          HelperText='例如: {"Authorization": "Bearer token"}' />

            @if (_model.HttpMethod == 2 || _model.HttpMethod == 3)
            {
                <MudTextField @bind-Value="_model.Body" Label="Body (JSON)" Lines="5" Class="mt-3"
                              HelperText='例如: {"title": "test", "body": "content"}' />
            }
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">取消</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@_submitting">
            @if (_submitting)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                <text>建立</text>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public EventCallback OnJobCreated { get; set; }

    private bool _visible;
    private MudForm? _form;
    private bool _submitting;
    private CreateJobRequest _model = new();
    private DateTime? _scheduledDate;
    private TimeSpan? _scheduledTime;

    private readonly DialogOptions _dialogOptions = new()
    {
        MaxWidth = MaxWidth.Medium,
        FullWidth = true,
        CloseButton = true
    };

    public void Open()
    {
        _model = new CreateJobRequest { Type = 1, HttpMethod = 1 };
        _scheduledDate = DateTime.Today.AddDays(1);
        _scheduledTime = new TimeSpan(9, 0, 0);
        _visible = true;
    }

    private void Cancel()
    {
        _visible = false;
    }

    private async Task Submit()
    {
        if (_form == null) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        // 組合 ScheduledAt
        if (_model.Type == 1 && _scheduledDate.HasValue && _scheduledTime.HasValue)
        {
            _model.ScheduledAt = _scheduledDate.Value.Add(_scheduledTime.Value).ToUniversalTime();
        }

        _submitting = true;
        try
        {
            var response = await Http.PostAsJsonAsync("/api/custom-jobs", _model);
            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add("任務建立成功", Severity.Success);
                _visible = false;
                await OnJobCreated.InvokeAsync();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"建立失敗: {error}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"建立失敗: {ex.Message}", Severity.Error);
        }
        finally
        {
            _submitting = false;
        }
    }

    private class CreateJobRequest
    {
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public int Type { get; set; }
        public string? CronExpression { get; set; }
        public DateTime? ScheduledAt { get; set; }
        public int HttpMethod { get; set; }
        public string Url { get; set; } = string.Empty;
        public string? Headers { get; set; }
        public string? Body { get; set; }
    }
}
