@using AspireAppTemplate.Web.Infrastructure.Services
@using AspireAppTemplate.Web.Components.Shared
@inherits LayoutComponentBase
@implements IDisposable
@layout BaseLayout
@inject LayoutService LayoutService

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="0">
        <MudTooltip Text="Toggle Drawer">
            <MudIconButton Icon="@Icons.Material.Rounded.Notes" Color="Color.Inherit" Edge="Edge.Start"
                OnClick="@DrawerToggle" />
        </MudTooltip>
        <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/" DropShadow="false">
            @Loc["Nav_Dashboard"]
        </MudButton>
        <MudSpacer />
        
        <MudTooltip Text="@(LayoutService.IsDarkMode ? "Light Mode" : "Dark Mode")">
            <MudIconButton Icon="@(LayoutService.IsDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
                           Color="Color.Inherit" OnClick="@ToggleDarkMode" />
        </MudTooltip>
        
        <LanguageSelector />

        <MudTooltip Text="Theme Settings">
            <MudIconButton Icon="@Icons.Material.Filled.Palette" Color="Color.Inherit" 
                           OnClick="@OpenThemeDrawer" />
        </MudTooltip>

        <NotificationCenter />

        <LoginDisplay />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Variant="DrawerVariant.Mini" Outlined 
               ClipMode="DrawerClipMode.Always" Overlay="false">
        <NavMenu IsOpen="_drawerOpen" />
    </MudDrawer>

    <MudMainContent Class="pt-16">
        <MudContainer MaxWidth="@(_isBoxed ? MaxWidth.Large : MaxWidth.False)" Class="px-6 py-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IdentityApiClient IdentityApiClient
@inject IJSRuntime JSRuntime

@code {

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            try
            {
                // Sync user to local DB (creates user if new, e.g. from Social Login)
                await IdentityApiClient.SyncUserAsync();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"User sync failed: {ex.Message}");
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("window.hideLoader");
        }
    }
}


